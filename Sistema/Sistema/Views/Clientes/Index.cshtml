@model IEnumerable<Sistema.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Clientes", FormMethod.Post))
    {
        @Html.Label("Nombre:")
        <input placeholder="Cliente a buscar" name="Nombre" type="text" class="validate" />
        <input type="submit" name="form" value="Buscar" class="btn-group" />
    }
    @using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
    {
       <label>Categoria:</label>
        <select name="cat">
            <option value="">Seleccione una categoria</option>
            <option value="Premium">Premium</option>
            <option value="Regular">Regular</option>
        </select>
        <input type="submit" name="form" value="Filtrar" class="btn-group" />
        @ViewBag.Conteo
        @ViewBag.Error;
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorias.NombreCat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorias.NombreCat)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_cliente }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_cliente }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_cliente })
        </td>
    </tr>
}

</table>
