<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de facturacion</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" type="image/png" href="assets/images/favicon.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
    <style>
        body {
            background-color: lightgray;
        }
    </style>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="~/Content/responsive.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: mediumpurple">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="\Home/Index" style="color: white">Inicio</a>
                <a class="navbar-text" href="\Clientes/Index" style="color: white">Clientes</a>
                <a class="navbar-text" href="\Proveedors/Index"style="color: white">Proveedores</a>
                <a class="navbar-text" href="\Productoes/Index"style="color: white">Productos</a>
                <a class="navbar-text" href="\Entradas/Index"style="color: white">Mercancia</a>
                <a class="navbar-text" href="\Ventas/Index"style="color: white">Ventas</a>
                <a class="navbar-text" href="\Facturas/Index"style="color: white">Facturas</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer-distributed">

            <div class="footer-left">
                <h3>Sistema<span>Facturacion</span></h3>

                <p class="footer-links">
                    <a href="\Home/Index">Inicio</a>
                    |
                    <a href="\Clientes/Index">Clientes</a>
                    |
                    <a href="\Proveedors/Index">Proveedores</a>
                    |
                    <a href="\Productoes/Index">Productos</a>
                </p>

                <p class="footer-company-name">© 2020 Sistema facturacion</p>
            </div>

            <div class="footer-center">
                <div>
                    <i class="fa fa-map-marker"></i>
                    <p>
                        <span>
                            San Juan de la Maguana, Mirador norte #16
                        </span>
                        San Juan
                    </p>
                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    <p>+1 848 288 2887</p> 
                </div>
                <div>
                    <i class="fa fa-envelope"></i>
                    <p><a href="mailto:support@sistema.com">Soporte</a></p>
                </div>
            </div>
            <div class="footer-right">
                <p class="footer-company-about">
                    <span>About the company</span>
                    El sistema de facturacion que siempre estara a tu alcance
                </p>
                <div class="footer-icons">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-instagram"></i></a>
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                    <a href="#"><i class="fa fa-youtube"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>