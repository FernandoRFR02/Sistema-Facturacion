@model IEnumerable<Sistema.Models.Facturas>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Añadir", "Create")
    @using (Html.BeginForm("Index", "Facturas", FormMethod.Post))
    {
        @Html.Label("Ingrese id del cliente")
        <input placeholder="Entrega" name="entrega" type="text" class="form-control" />
        <input type="submit" name="form" value="Buscar" class="btn btn-default" />
        <button type="button" class="btn btn-default" onclick="javascript:window.print()">Imprimir</button>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ITBIS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayName("Cliente")
        </th>
        <th>
            @Html.DisplayName("Venta")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ITBIS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ventas.id_venta)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_fractura }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_fractura }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id_fractura })
        </td>
    </tr>
}

</table>
